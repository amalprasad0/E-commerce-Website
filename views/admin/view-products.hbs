<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">ADD PRODUCTS

            </a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col"No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Desc</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px;height:auto" src="/product-images/{{this._id}}.jpg" alt="no found"></td>
      <td>
        <a href="/admin/delete-product"class="btn btn-danger">Remove</a>
        <a href="/admin/edit-product" class="btn btn-primary">Edit</a></td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>